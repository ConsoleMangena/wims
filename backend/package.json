    "pg": "^8.11.5",
    "@fastify/cors": "^9.0.1",
    "fastify-plugin": "^4.5.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "platformatic": "^2.37.0"
  }
}
