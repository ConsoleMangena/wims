# Backend environment (copy to backend/.env)
PORT=4000
# Comma-separated list of allowed origins for CORS
CORS_ORIGIN=http://localhost:5173
# Send cookies/authorization headers across origins (false for token-in-header auth)
CORS_CREDENTIALS=false

# PostgreSQL connection (replace placeholders)
# Example local: postgresql://postgres:postgres@localhost:5432/wims
# Example Neon:  postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Optional DB tuning
DB_SSL=true
DB_CONN_TIMEOUT_MS=15000
